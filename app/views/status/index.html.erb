<h1>Status</h1>

<h2>Current Status</h2>
<div>
  <div><%= @current_status.state %></div>
  <div><%= @current_status.message %></div>
  <div><%= @current_status.created_at %></div>
</div>

<h2>Previous Status</h2>
<ul>
  <% @previous_statuses.each do |status| %>
    <li>
      <div>
        <div><%= status.state %></div>
        <div><%= status.message %></div>
        <div><%= status.created_at %></div>
      </div>
    </li>
  <% end %>
</ul>
